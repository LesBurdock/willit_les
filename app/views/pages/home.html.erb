
<div class="container card-padding max-card-width" >
<div class="progress">
  <div class="progress-bar bg-success progress-bar-striped active" role="progressbar"
  aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:40%">
    40%
  </div>
</div>
    <% if current_user.nickname.present? %>
          <h2 class="header2"> Hi, <%= current_user.nickname %> </h2>
        <% else %>
          <h2 class="header2">Select a Category</h2>
        <% end %>
  <div class="row no-margin">
    <div class="card">
      <%= image_tag "personal.png", style:"height:100%;width:auto;" %>
        <div class="card-body">
         <%= link_to 'Yourself', edit_user_path(current_user) %>
       </div>
    </div>
    <div class="card green">
      <%= image_tag "relations.png", style:"height:100%;width:auto;" %>
         <%= link_to 'Relations', edit_user_path(current_user) %>
    </div>
  </div>
  <div class="row no-margin" >
    <div class="card">
     <%= image_tag "dog.png", style:"height:100%;width:auto;" %>
     <%= link_to 'Valuables', edit_user_path(current_user) %></div>
