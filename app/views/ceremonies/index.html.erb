<h1> index page </h1>
<div class = "container1">
  <div>
    <%= image_tag('ceremony.png',class:'top_image')%>
  </div>

  <div class ="purple_box">
    <div class = "container2">
    <h4>Review Your Ceremony Details</h4>
      <div class = "review">
      <% if @ceremonies.empty? %>
        <h4> You currently have no ceremony details added </h4>
        <%= link_to 'Add some details', new_ceremony_path, class: 'btn btn-ghost' %>
      <%else%>
      <% @ceremonies.each do |ceremony| %>
      <li>
        <% if policy(ceremony).edit? %>
        <%= link_to image_tag('edit.png',width:40), edit_ceremony_path(ceremony) %>
        <% end %>
        <% if policy(ceremony).destroy? %>
        <%= link_to image_tag('bin.png',width:40), ceremony_path(ceremony),
                method: :delete, data: {
                confirm: 'Are you sure?' }%></li>
        <%end%>
      <% end %>
    <% end %>
    </div>
    </div>
  </div>
</div>
