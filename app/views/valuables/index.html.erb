  <div class="row">
    <div class="col-sm m-5">
     <div class="text_box">
        <%= simple_form_for @valuable  do |f| %>
            <%= f.input :title, :label => "Item Brand/Name"%>
            <%= f.input :description, :label => "Item Description" %>
