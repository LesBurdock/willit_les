<div class="container1">
    <div>
        <%= image_tag('relations.png',class:'top_image')%>
    </div>
    <div class="purple_box">
        <div class="container2">
            <div class="progress_notes">
                <h4>Your Important People</h4>
                <%= render "contacts/executor_set" %>
            </div>
            <div class="review">
                <% if @contacts.empty? %>
                <h4> You currently have no relations added </h4>
                <%= link_to 'Add a Relation', new_contact_path, class: 'orangeButton' %>
                <%else%>
                <% @contacts.each do |contact| %>
                <li>
                    <% if contact.is_executor %>
                    <%= image_tag('tick.png', width:25) %>
                    <%end%>
                    <%= contact.first_name + " " + contact.last_name %>
                    <% if policy(contact).edit? %>
                    <%= link_to image_tag('edit.png',width:25 ), edit_contact_path(contact) %>
                    <% end %>
                    <% if policy(contact).destroy? %>
                    <%= link_to image_tag('bin.png',width:25), contact_path(contact),
                        method: :delete, data: {
                        confirm: 'Are you sure?' }%>
                </li>
                <%end%>
                <% end %>
                <% end %>
            </div>
        </div>
        <div class="plus">
            <%= link_to image_tag("plus_white.png", size: 40, style: "float:right"), new_contact_path %>
        </div>
    </div>
</div>
