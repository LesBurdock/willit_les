    <% if user_signed_in? && total_progress > 10 %>
    <h4 class="header2">You're making Great Progress!</h4>
    <div id="cont" data-pct=<%=total_progress %> data-percent=
        <%=total_progress %> >
        <svg id="svg" width="200" height="200" viewPort="0 0 100 100" version="1.1" xmlns="http://www.w3.org/2000/svg">
            <circle r="90" cx="100" cy="100" fill="transparent" stroke-dasharray="565.48" stroke-dashoffset="0"></circle>
            <circle id="bar" r="90" cx="100" cy="100" fill="transparent" stroke-dasharray="565.48" stroke-dashoffset="0"></circle>
        </svg>
    </div>
    <h6 class="header2">Continue Your Planning</h6>
    <% else %>
    <h6 class="header2">Your Dashboard</h6>
    <% end %>
    <div class="card-trip">

        <%= link_to profile_path do %>
        <%= image_tag("pablo-face-recognition.png") %>
        <div class="progress">
            <div class="progress-bar" role="progressbar" style='width:  <%= "#{profile_progress}%" %>' aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                <%= "#{profile_progress}%" %>
            </div>
        </div>
        <div class="card-trip-infos">
            <h2>Yourself</h2>
        </div>
    </div>
    <% end %>
    <div class="card-trip">

        <%= link_to contacts_path do %>
        <%= image_tag("pablo-sign-up.png") %>
        <div class="progress">
            <div class="progress-bar" role="progressbar" style='width:  <%= "#{contact_progress}%" %>' aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                <%= "#{contact_progress}%" %>
            </div>
        </div>
        <div class="card-trip-infos">
            <h2>Loved Ones</h2>
        </div>
    </div>
    <% end %>
    <div class="card-trip">
        <%= link_to valuables_path do %>
        <%=  image_tag("pablo-camera-access.png") %>
        <div class="progress">
            <div class="progress-bar" role="progressbar" style='width:  <%= "#{valuable_progress}%" %>' aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                <%= "#{valuable_progress}%" %>
            </div>
        </div>
        <div class="card-trip-infos">
            <h2>Valuables</h2>
        </div>
    </div>
    <% end %>
    <div class="card-trip">
        <%= link_to new_ceremony_path do %>
        <%= image_tag("pablo-done.png") %>
        <div class="progress">
            <div class="progress-bar" role="progressbar" style='width:  <%= "#{ceremony_progress}%" %>' aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                <%= "#{ceremony_progress}%" %>
            </div>
        </div>
        <div class="card-trip-infos">
            <h2>Ceremony</h2>
        </div>
    </div>
    <% end %>
</div>
</div>

